<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#363646"
    tools:context="android.wealthclockadvisors.app.wealthclockadvisors.Views.fragment.DashBoard.Fragment_Invest_Angle_Save_Tax">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:paddingBottom="10dp"

                android:orientation="vertical"

                android:id="@+id/linear1">





                <ImageView

                    android:layout_width="40dp"

                    android:layout_height="40dp"

                    android:layout_gravity="center"

                    android:layout_margin="10dp"

                    android:background="@drawable/investangle1"/>



                <TextView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:id="@+id/tv1"

                    android:gravity="center"

                    android:layout_marginBottom="10dp"

                    android:lines="1"

                    android:text="Save Tax With Zero Effort And Complete Control"

                    android:textSize="13dp"



                    android:textColor="@color/White"/>



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="horizontal">



                    <LinearLayout

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        android:layout_weight="1"

                        android:padding="10dp"

                        android:layout_marginLeft="25dp"

                        android:layout_marginRight="10dp"

                        android:background="@drawable/panel33">



                        <ImageView

                            android:layout_width="35dp"

                            android:layout_height="35dp"

                            android:layout_gravity="center"

                            android:background="@drawable/taxx"/>



                        <TextView

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:text="Diversification Of Funds"

                            android:textSize="10dp"

                            android:textColor="@color/White"

                            android:lines="1"/>



                    </LinearLayout>



                    <LinearLayout

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:padding="10dp"

                        android:layout_marginRight="25dp"

                        android:orientation="vertical"

                        android:background="@drawable/panel33">



                        <ImageView

                            android:layout_width="35dp"

                            android:layout_height="35dp"

                            android:layout_gravity="center"

                            android:background="@drawable/investangle2"/>



                        <TextView

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:text="Algorithemic Fund Selection"

                            android:textSize="10dp"

                            android:textColor="@color/White"

                            android:lines="1"/>



                    </LinearLayout>



                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">



                    <LinearLayout

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:orientation="vertical"

                        android:layout_weight="1"

                        android:padding="10dp"

                        android:layout_marginLeft="25dp"

                        android:layout_marginRight="10dp"

                        android:background="@drawable/panel33">



                        <ImageView

                            android:layout_width="35dp"

                            android:layout_height="35dp"

                            android:layout_gravity="center"

                            android:background="@drawable/investangle3"/>



                        <TextView

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:text="Continuous Tracking"

                            android:textSize="10dp"

                            android:textColor="@color/White"

                            android:lines="1"/>



                    </LinearLayout>



                    <LinearLayout

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:padding="10dp"

                        android:layout_marginRight="25dp"

                        android:orientation="vertical"

                        android:background="@drawable/panel33">



                        <ImageView

                            android:layout_width="35dp"

                            android:layout_height="35dp"

                            android:layout_gravity="center"

                            android:background="@drawable/investangle4"/>



                        <TextView

                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:gravity="center"

                            android:text="Shortest Lock In (3yrs)"

                            android:textSize="10dp"

                            android:textColor="@color/White"

                            android:lines="1"/>



                    </LinearLayout>



                </LinearLayout>



                <!--<TextView-->

                <!--android:layout_width="match_parent"-->

                <!--android:layout_height="wrap_content"-->

                <!--android:layout_marginTop="10dp"-->

                <!--android:text="Schemes"-->

                <!--android:textSize="13dp"-->

                <!--android:textColor="@color/White"-->

                <!--android:gravity="center"/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mode Of Payment"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/_15sdp"/>

                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:layout_marginTop="10dp"

                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:textColor="#fffefe"

                        android:textSize="@dimen/_13sdp"

                        android:text="Offline"/>

                    <Switch

                        android:id="@+id/onOffSwitch"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:textColor="#fffefe"

                        android:layout_marginLeft="10dp"

                        android:layout_marginRight="10dp"

                        android:shadowColor="@color/colorPrimary"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fffefe"
                        android:textSize="@dimen/_13sdp"
                        android:text="Online"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:id="@+id/relative1">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lv1"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@+id/relative1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:id="@+id/total"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:id="@+id/investnow"
                    android:text="INVEST NOW"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/White"
                    android:layout_gravity="center"
                    android:background="@drawable/button_shape"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>





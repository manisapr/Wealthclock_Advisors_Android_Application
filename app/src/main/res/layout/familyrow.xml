<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="#595959"
    android:id="@+id/tapCard">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_140sdp"
       android:layout_marginBottom="@dimen/_10sdp"
       android:orientation="vertical"
       android:weightSum="2">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0sp"
           android:layout_weight=".8"
           android:orientation="horizontal"
           android:weightSum="3.4">

           <RelativeLayout
               android:layout_width="0sp"
               android:layout_height="match_parent"
               android:layout_weight="2.6">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/profileIcon"
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:paddingTop="7dp"
                       android:visibility="gone"
                       android:src="@drawable/profile_placeholder"/>
                   <ImageView
                       android:id="@+id/placeholderImage"
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:paddingTop="7dp"
                       android:visibility="visible"
                       android:src="@drawable/profile_placeholder"/>

                   <TextView
                       android:id="@+id/name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sujoy"
                       android:textColor="#fff"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="75dp"/>
               </RelativeLayout>

           </RelativeLayout>

           <View
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#4c4c57" />

           <LinearLayout
               android:layout_width="0sp"
               android:layout_height="match_parent"
               android:layout_weight=".8"
               android:orientation="vertical">


               <TextView
                   android:id="@+id/total"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="@dimen/_3sdp"
                   android:text="% of total"
                   android:textColor="#b3b3b3"
                   android:textSize="@dimen/_10sdp"
                   android:visibility="gone"/>

               <TextView
                   android:id="@+id/totalchange"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                  android:layout_gravity="center"
                   android:text="0.9%"
                   android:textColor="#ffffff"
                   android:layout_marginTop="10dp"
                   android:textSize="12dp"
                   android:visibility="visible"/>


           </LinearLayout>

       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="#4c4c57" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0sp"
           android:layout_weight="1.2"
           android:orientation="horizontal"
           android:weightSum="3">

           <RelativeLayout
               android:layout_width="0sp"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_marginRight="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:background="#595959"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_3sdp"
                       android:text="Amount Invested"
                       android:textColor="#b3b3b3"
                       android:textSize="@dimen/_8sdp" />

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_5sdp">

                       <ImageView
                           android:id="@+id/img1"
                           android:layout_width="@dimen/_7sdp"
                           android:layout_height="@dimen/_7sdp"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="@dimen/_2sdp"
                           android:src="@drawable/rupee"
                           android:tint="#ffffff" />

                       <TextView
                           android:id="@+id/investAmount"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/img1"
                           android:text="00000000000"
                           android:textColor="#ffffff"
                           android:textSize="12dp" />

                   </RelativeLayout>


               </LinearLayout>


           </RelativeLayout>

           <View
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#4c4c57" />

           <RelativeLayout
               android:layout_width="0sp"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_marginRight="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:background="#595959"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_3sdp"
                       android:text="Current Value"
                       android:textColor="#b3b3b3"
                       android:textSize="@dimen/_8sdp" />

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_5sdp">

                       <ImageView
                           android:id="@+id/img2"
                           android:layout_width="@dimen/_7sdp"
                           android:layout_height="@dimen/_7sdp"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="@dimen/_2sdp"
                           android:src="@drawable/rupee"
                           android:tint="#ffffff" />

                       <TextView
                           android:id="@+id/fundCurrentValue"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/img2"
                           android:text="0000000000000"
                           android:textColor="#ffffff"
                           android:textSize="12dp" />

                   </RelativeLayout>

               </LinearLayout>


           </RelativeLayout>

           <View
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#4c4c57" />

           <RelativeLayout
               android:layout_width="0sp"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="@dimen/_10sdp"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_marginRight="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:background="#595959"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_3sdp"
                       android:text="XIRR"
                       android:textColor="#b3b3b3"
                       android:textSize="@dimen/_8sdp" />

                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="@dimen/_5sdp">

                       <TextView
                           android:id="@+id/fundxirr"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0.30%"
                           android:textColor="#ffffff"
                           android:textSize="12dp" />

                   </RelativeLayout>

               </LinearLayout>


           </RelativeLayout>


       </LinearLayout>

   </LinearLayout>

</android.support.v7.widget.CardView>
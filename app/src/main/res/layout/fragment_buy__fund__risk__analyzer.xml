<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363646"
    android:clickable="true"
    tools:context="android.wealthclockadvisors.app.wealthclockadvisors.Views.fragment.DashBoard.RiskAnalyzer.Buy_Fund_Risk_Analyzer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹"
            android:textColor="#fffefe"
            android:textSize="18dp" />
        <EditText
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"
            android:backgroundTint="@color/White"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textSize="@dimen/_15sdp"
            android:hint="Enter Amount"
            android:id="@+id/et1"
            android:inputType="number"
            android:textColorHint="@color/White"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funds Distribution"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/White"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode Of Payment"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:textSize="@dimen/_13sdp"
                android:text="Offline"/>
            <Switch
                android:id="@+id/onOffSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:shadowColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:textSize="@dimen/_13sdp"
                android:text="Online"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv1"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/generate_funds"
            android:text="Generate Funds"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/investnow"
            android:text="INVEST NOW"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

</FrameLayout>

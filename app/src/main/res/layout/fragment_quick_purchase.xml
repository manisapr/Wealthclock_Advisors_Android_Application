<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.fragment.DashBoard.QuickPurchaseFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363646"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode Of Payment"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_15sdp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#363646">



    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dcdada"
            android:layout_marginLeft="5dp"
            android:text="Select Payment Mode"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/online"
            android:textColor="#dcdada"
            android:layout_marginLeft="5dp"
            android:text="Online"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offline"
            android:textColor="#dcdada"
            android:text="Offline"/>
    </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:textSize="@dimen/_13sdp"
                android:text="Offline"/>
            <Switch
                android:id="@+id/onOffSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:shadowColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:textSize="@dimen/_13sdp"
                android:text="Online"/>
        </LinearLayout>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amc"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:autofillHints="Select AMC"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:theme="@style/ThemeSpinner"></Spinner>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/folio_no"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:autofillHints="Dividend Division"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:theme="@style/ThemeSpinner"></Spinner>


        <EditText
            android:id="@+id/folioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Folio No."
            android:textColorHint="#e6e6e6"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/White"
            android:backgroundTint="#818181"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fund_type"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:theme="@style/ThemeSpinner"></Spinner>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fund_name"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:theme="@style/ThemeSpinner"></Spinner>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plan"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:theme="@style/ThemeSpinner"></Spinner>

        <TextView
            android:id="@+id/minimumPurchaseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/MaximumPurchaseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:id="@+id/dividendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#dcdada"
                    android:text="Dividend Option"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/payout"
                    android:textColor="#dcdada"
                    android:text="Payout"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reinvestment"
                    android:textColor="#dcdada"
                    android:text="Reinvestment"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dividend_option"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autofillHints="Dividend Division"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:theme="@style/ThemeSpinner"></Spinner>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:hint="Enter Amount"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="30dp"
        android:textColorHint="#e6e6e6"
        android:textSize="13dp"
        android:inputType="phone"
        android:backgroundTint="#818181"
        android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/minimumAmountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Please"
            android:textColor="@color/red"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/_10sdp">
        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/purchase"
            android:text="Purchase"
            android:background="@drawable/button_shape"
            android:textColor="#dcdada"/>
    </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.fragment.onBoard.ProofOfIdentity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ababab"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_30sdp"
            android:textColor="#848383"
            android:text="Proof Of Identity"/>

        <EditText
            android:id="@+id/aadhaar_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:hint="Aadhaar card "
            android:inputType="textCapCharacters"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/passport_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:hint="Passport No"
            android:inputType="text"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/driving_license_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:hint="Driving License"
            android:inputType="text"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/voter_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:hint="Voter Id "
            android:inputType="text"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/passport_expiry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:clickable="false"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:focusable="false"
            android:hint="Passport Expiry date"
            android:inputType="none"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/driving_expiry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5e5d5d"
            android:clickable="false"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:focusable="false"
            android:hint="Driving License Expiry date"
            android:inputType="none"
            android:textColor="#161616"
            android:textCursorDrawable="@null" />

        <RelativeLayout
            android:id="@+id/next"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/colorGreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Next"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/grayDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/white_circle" />

        <ProgressBar
            android:indeterminateTint="@color/colorGreen"
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</FrameLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->

        <item name="colorPrimary">@color/colorGreen</item>

    </style>

    <style name="splashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash1</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="tutorial" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FloatingActionTheme" parent="Theme.AppCompat.Light">
        <item name="color">@color/colorGreen</item>
    </style>


    <style name="NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <style name="DefaultNumberPickerTheme" parent="AppTheme">

        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorGreen</item>
    </style>


    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#008577</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#008577</item>
    </style>


    <style name="ThemeSpinner1">
        <!-- Color when pressed -->
        <item name="colorAccent">#1e1c33</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#1e1c33</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
